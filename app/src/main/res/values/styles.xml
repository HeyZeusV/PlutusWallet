<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_base</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSecondary">@color/green_base</item>
        <item name="colorOnSurface">@color/colorText</item>
        <!-- views like checkboxes and text fields -->
        <item name="colorAccent">@color/green_base</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>

        <item name="colorButtonBackground">@color/colorButtonBackground</item>
        <item name="colorButtonText">@color/colorButtonText</item>
        <item name="colorBackground">@color/colorBackground</item>

        <item name="textSizeBase">@dimen/textSizeBase</item>

        <item name="android:datePickerDialogTheme">@style/DatePickerTheme.Custom</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Dialog.Alert.Custom</item>
        <item name="android:scrollbarThumbVertical">?attr/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_base</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSecondary">@color/green_base</item>
        <item name="colorOnSurface">@color/colorText</item>
        <!-- views like checkboxes and text fields -->
        <item name="colorAccent">@color/green_base</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>

        <item name="colorButtonBackground">@color/colorButtonBackground</item>
        <item name="colorButtonText">@color/colorButtonText</item>
        <item name="colorBackground">@color/colorBackground</item>

        <item name="textSizeBase">@dimen/textSizeBase</item>

        <item name="android:datePickerDialogTheme">@style/DatePickerTheme.Custom</item>
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Dialog.Alert.Custom</item>
        <item name="android:scrollbarThumbVertical">?attr/colorAccent</item>
    </style>

    <style name="Button.TextOnly" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">?attr/colorButtonBackground</item>
        <item name="android:minHeight">@dimen/minSize</item>
        <item name="android:textColor">?attr/colorButtonText</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <!-- Icon only Material Button -->
    <style name="Button.IconOnly.Custom.ViewHolder" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/minSize</item>
        <item name="android:layout_height">@dimen/minSize</item>
        <item name="android:layout_marginTop">@dimen/accCatMarginTopBottom</item>
        <item name="android:layout_marginEnd">@dimen/accCatMarginStartEnd</item>
        <item name="android:layout_marginBottom">@dimen/accCatMarginTopBottom</item>
        <item name="android:backgroundTint">?attr/colorButtonBackground</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">?attr/colorButtonText</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="Spinner.Custom.Base" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="TextView.Custom.Scrollable" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:maxLength">32</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">?attr/textSizeBase</item>
    </style>

    <style name="TextView.Custom.Scrollable.ViewHolder" parent="TextView.Custom.Scrollable">
        <item name="android:layout_marginStart">@dimen/accCatMarginStartEnd</item>
        <item name="android:layout_marginEnd">@dimen/accCatMarginStartEnd</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="TextView.Custom.Empty" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/emptyTextViewMarginStartEnd</item>
        <item name="android:layout_marginEnd">@dimen/emptyTextViewMarginStartEnd</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">?attr/textSizeBase</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="CheckBox.Custom" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/checkbox_anim</item>
        <item name="android:button">@null</item>
    </style>

    <style name="CircleIndicator.Custom" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="ci_animator">@animator/indicator_animator</item>
        <item name="ci_animator_reverse">@animator/indicator_reverse_animator</item>
        <item name="ci_drawable">@drawable/indicator_shape</item>
        <item name="ci_drawable_unselected">@drawable/indicator_shape</item>
        <item name="ci_gravity">bottom|center</item>
        <item name="ci_margin">5dp</item>
        <item name="ci_width">25dp</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="AppBarRipple">
        <item name="colorControlHighlight">@color/ripple_material_dark</item>
    </style>

    <style name="ToolBar.Custom" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

    <style name="CardView.Custom.Base" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardView.Custom.FullScreen" parent="CardView.Custom.Base">
        <item name="android:layout_margin">@dimen/cardFullMargin</item>
    </style>

    <style name="EditText.Custom.Base" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">?attr/textSizeBase</item>
        <item name="android:minHeight">@dimen/minSize</item>
    </style>

    <style name="EditText.Custom.SingleLine" parent="EditText.Custom.Base">
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.Custom.MultiLine" parent="EditText.Custom.Base">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">5</item>
        <item name="android:maxLength">512</item>
    </style>

    <style name="SnackBar.Anchor" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="layout_constraintBottom_toBottomOf">@id/materialCardView</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="ThemeOverlay.TextInputLayout.OutlinedBox.Custom" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">?attr/colorAccent</item>
    </style>

    <style name="TextInputLayout.Custom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">?attr/colorAccent</item>
        <item name="hintTextColor">?attr/colorAccent</item>
        <item name="boxStrokeColor">?attr/colorAccent</item>
        <item name="android:theme">@style/ThemeOverlay.TextInputLayout.OutlinedBox.Custom</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
    </style>

    <style name="Dialog.Alert.Button.Custom" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAlertDialogButtonText</item>
    </style>

    <style name="ThemeOverlay.Dialog.Alert.Custom" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/Dialog.Alert.Button.Custom</item>
        <item name="buttonBarNegativeButtonStyle">@style/Dialog.Alert.Button.Custom</item>
    </style>
    
    <style name="DatePickerTheme.Custom" parent="android:Theme.Material.Dialog">
        <item name="android:colorAccent">?attr/colorAccent</item>
        <item name="android:datePickerStyle">@style/DatePickerStyle.Custom</item>
        <item name="android:windowBackground">@color/colorDataPickerBackground</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Dialog.Alert.Button.Custom</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/Dialog.Alert.Button.Custom</item>
    </style>

    <style name="DatePickerStyle.Custom" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:headerBackground">@color/colorDatePickerHeader</item>
        <item name="android:background">@color/colorDataPickerBackground</item>
    </style>

    <style name="NestedScrollView.Custom" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nestedScrollViewHeight</item>
        <item name="android:background">@drawable/round_sv_bg</item>
        <item name="android:scrollbarSize">@dimen/scrollbarSmall</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:visibility">gone</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="NestedScrollView.ChildTextView.Custom" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/nestedScrollViewChildPadding</item>
    </style>

    <style name="About.Custom.Base" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="About.Custom.Spacer.TextView" parent="About.Custom.Base">
        <item name="android:layout_height">@dimen/spacerHeight</item>
    </style>

    <style name="About.Custom.Info.Base" parent="About.Custom.Base">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/aboutTextViewTopMargin</item>
        <item name="android:textSize">?attr/textSizeBase</item>
    </style>

    <style name="About.Custom.Info.TextView" parent="About.Custom.Info.Base">
        <item name="android:gravity">center</item>
    </style>

    <style name="About.Custom.Info.Button" parent="About.Custom.Info.Base">
        <item name="android:backgroundTint">?attr/colorButtonBackground</item>
        <item name="android:textColor">?attr/colorButtonText</item>
    </style>

    <style name="Filter.TextView" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/filterDefaultMarginStartEnd</item>
        <item name="android:layout_marginEnd">@dimen/filterTextViewMarginEnd</item>
        <item name="android:textSize">?attr/textSizeBase</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="Filter.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/filterDefaultMarginStartEnd</item>
        <item name="android:layout_marginEnd">@dimen/filterDefaultMarginStartEnd</item>
        <item name="android:minHeight">@dimen/minSize</item>
        <item name="android:textColor">@color/button_outlined_color_selector</item>
        <item name="android:textSize">@dimen/textSizeFilterButton</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="strokeColor">@color/button_outlined_color_selector</item>
    </style>

    <style name="Filter.Spinner" parent="Spinner.Custom.Base">
        <item name="android:layout_marginStart">@dimen/filterDefaultMarginStartEnd</item>
        <item name="android:layout_marginEnd">@dimen/filterDefaultMarginStartEnd</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>
</resources>