<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_base</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorSecondary">@color/green_base</item>
        <item name="colorOnBackground">@color/colorText</item>
        <item name="colorOnSurface">@color/colorText</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_base</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorSecondary">@color/green_base</item>
        <item name="colorOnBackground">@color/colorText</item>
        <item name="colorOnSurface">@color/colorText</item>
    </style>

    <!-- Icon only Material Button -->
    <style name="Widget.MaterialComponents.Button.Icon.Custom" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="rippleColor">?colorOnBackground</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="AppBarRipple">
        <item name="colorControlHighlight">@color/ripple_material_dark</item>
    </style>

    <style name="ToolBar.Custom" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>
</resources>
