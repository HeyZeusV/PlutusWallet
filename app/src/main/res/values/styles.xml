<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_base</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSecondary">@color/green_base</item>
        <item name="colorOnSurface">@color/colorText</item>
        <!-- views like checkboxes and text fields -->
        <item name="colorAccent">@color/green_base</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:textColorHint">@color/textColorHint</item>

        <item name="colorButtonBackground">@color/colorButtonBackground</item>
        <item name="colorButtonText">@color/colorButtonText</item>
        <item name="colorBackground">@color/colorBackground</item>

        <item name="textSizeBase">@dimen/textSizeBase</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_base</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSecondary">@color/green_base</item>
        <!-- views like checkboxes and text fields -->
        <item name="colorAccent">@color/green_base</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <!-- Icon only Material Button -->
    <style name="Widget.MaterialComponents.Button.Icon.Custom" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="rippleColor">?colorOnBackground</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="AppBarRipple">
        <item name="colorControlHighlight">@color/ripple_material_dark</item>
    </style>

    <style name="ToolBar.Custom" parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="titleTextColor">@android:color/white</item>
    </style>

<!--    <style name="CheckBox.Style" parent="Widget.MaterialComponents.CompoundButton.CheckBox">-->
<!--        <item name="materialThemeOverlay">@style/CheckBox.ThemeOverlay</item>-->
<!--    </style>-->

<!--    <style name="CheckBox.ThemeOverlay" parent="">-->
<!--        <item name="colorSecondary">@color/green_base</item>-->
<!--    </style>-->
    
    <style name="CardView.Custom.Base" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardView.Custom.FullScreen" parent="CardView.Custom.Base">
        <item name="android:layout_margin">@dimen/cardFullMargin</item>
    </style>

    <style name="EditText.Custom.Base" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">?attr/textSizeBase</item>
        <item name="android:minHeight">@dimen/minHeight</item>
    </style>

    <style name="EditText.Custom.SingleLine" parent="EditText.Custom.Base">
        <item name="android:inputType">text</item>
    </style>

    <style name="EditText.Custom.MultiLine" parent="EditText.Custom.Base">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">5</item>
        <item name="android:maxLength">512</item>
    </style>
</resources>