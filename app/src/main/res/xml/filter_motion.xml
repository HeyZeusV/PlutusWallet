<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@+id/filter_motion_start"
        app:constraintSetEnd="@+id/filter_motion_end"
        app:duration="400" />

    <ConstraintSet
        android:id="@+id/filter_motion_start">
        <Constraint
            android:id="@+id/fragment_filter_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"
            app:defaultNavHost="false"
            app:layout_constraintBottom_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.70"
            app:layout_constraintStart_toStartOf="parent"
            app:navGraph="@navigation/filter_nav_graph" />

        <Constraint
            android:id="@+id/cfl_filter_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0"
            android:background="@color/black"
            android:elevation="-1dp" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/filter_motion_end">
        <Constraint
            android:id="@+id/fragment_filter_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"
            app:defaultNavHost="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.70"
            app:layout_constraintStart_toStartOf="parent"
            app:navGraph="@navigation/filter_nav_graph" />

        <Constraint
            android:id="@+id/cfl_filter_mask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.547"
            android:background="@color/black"
            android:elevation="1dp" />
    </ConstraintSet>
</MotionScene>