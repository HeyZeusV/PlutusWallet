<?xml version="1.0" encoding="utf-8"?>
<animated-selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/arrow_up"
        android:drawable="@drawable/ic_baseline_arrow_drop_up_24"
        android:state_activated="true" />

    <item
        android:id="@+id/arrow_down"
        android:drawable="@drawable/ic_baseline_arrow_drop_down_24px" />

    <transition
        android:drawable="@drawable/avd_button_drop_arrow_down_to_up"
        android:fromId="@id/arrow_down"
        android:toId="@id/arrow_up" />

    <transition
        android:drawable="@drawable/avd_button_drop_arrow_up_to_down"
        android:fromId="@id/arrow_up"
        android:toId="@id/arrow_down" />
</animated-selector>